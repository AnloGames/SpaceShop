@model SpaceShop_ViewModels.ProductCreation
@{
string title = "Delete";

}
<h3>@title Product</h3>

<form method="post" asp-action="Delete">
    <input asp-for="product.Id" hidden />
    <p>
        <label asp-for="product.Name"></label>
        <input asp-for="product.Name" class="form-control" disabled/>
        <span asp-validation-for="product.Name" class="text-danger"></span>
    </p>
    <p>
        <label asp-for="product.Price"></label>
        <input asp-for="product.Price" class="form-control" disabled />
        <span asp-validation-for="product.Price" class="text-danger"></span>
    </p>
    <p>
        <label asp-for="product.Description"></label>
        <!--<input asp-for="product.Description" class="form-control" />-->
        <input asp-for="product.Description" disabled />
        <span asp-validation-for="product.Description" class="text-danger"></span>
    </p>
    @if (@Model.product.Image != null)
    {
        <p>
            <img src="@SpaceShop_Utility.PathManager.ImageProductPath@Model.product.Image" width="100" />
        </p>
    }
    <p>

        <label asp-for="@Model.product.Category"></label>
        <input asp-for="@Model.product.Category.Name" disabled />
    </p>
    <p>
        <label asp-for="myModels"></label>
        <table class="table table-bordered table-striped" style="width: 1rem; display:inline-table;">
            <tbody>
                <tr>
                    @foreach (var myModel in Model.myModels)
                    {
                        <td>@myModel.Name</td>
                    }
                </tr>
            </tbody>
        </table>

    </p>
    <p>
        <input type="submit" class="btn border btn-success fa-sharp fa-solid fa-check" value="Delete " />
    </p>
    <p>
        <a class="btn btn-danger" asp-controller="Product" asp-action="Index"><i class="fa-solid fa-backward"></i> Back</a>
    </p>
    <p>
        <div asp-validation-summary="All"></div>
    </p>
</form>
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 200
            });
        });
    </script>
    }