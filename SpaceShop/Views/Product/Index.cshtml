<h3>Index</h3>

@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product";
}
<h1>"Hello"</h1>

<p>
    <a class="btn btn-primary" asp-controller="Product" asp-action="CreateEdit">
        Create Product
        <i class="fa-solid fa-plus"></i>
    </a>
</p>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" width="100%">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>Product Method</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="10%">@item.Name</td>
                    <td width="10%">@item.Price</td>
                    <td width="30%">@item.Description</td>
                    <td width="20%">@item.Image</td>
                    <td width="10%">
                        <a class="btn btn-primary" asp-controller="Product" asp-action="CreateEdit" asp-route-id="@item.Id">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-regular fa-eraser"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else {
    <p>No products.</p>
}

