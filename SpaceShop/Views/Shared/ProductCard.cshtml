@model SpaceShop_Models.Product

<div class="card filter @Model.Category.Name.Replace(' ', '_')" style="width: 18rem; float:left">
    <img src="@SpaceShop_Utility.PathManager.ImageProductPath@Model.Image" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.ShortDescription</p>
        <p class="card-text">Products in stock: @Model.ShopCount</p>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Details</a>
    </div>
</div>