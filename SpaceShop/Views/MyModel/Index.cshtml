<h3>Index</h3>

@model IEnumerable<MyModel>

@{
    ViewData["Title"] = "MyModel";
}
<p>
    <a class="btn btn-primary" asp-controller="MyModel" asp-action="Create">
        Create MyModel
        <i class="fa-solid fa-plus"></i>
    </a>
</p>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Number</th>
                <th>Methods</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">@item.Id</td>
                    <td width="40%">@item.Name</td>
                    <td width="20%">@item.Number</td>
                    <td width="20">
                        <a class="btn btn-danger" asp-controller="MyModel" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-regular fa-eraser"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}