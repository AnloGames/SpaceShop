@model HomeViewModel
@using LogicService.Dto.ViewModels;
@{
    
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div>
        <button class="btn filter-button" data-filter="all">All </button>
        @foreach (var item in Model.categories)
        {
            <button class="btn filter-button" data-filter="@item.Name.Replace(" ", "_")">@item.Name</button>
        }
    </div>
    @foreach (var prod in Model.products)
    {
        <div>
        <partial name="ProductCard" model="prod" class="div1"/>
        </div>
    }
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $('.filter-button').click(function () {
                var value = $(this).attr('data-filter')

                if (value == "all") {
                    $('.filter').show('1000');
                }
                else 
                {
                    $('.filter').not('.' + value).hide('1000');
                    $('.filter').filter('.' + value).show('1000');
                }
            })
        })
    </script>
}
