<h3>Index</h3>
@using LogicService.Dto;

@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "Category";
}

<p>
    <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create Category
        <i class="fa-solid fa-plus"></i>
    </a>
</p>

@if (Model.Count()>0)
{
    <table class="table table-bordered table-striped" width="100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Category Method</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="30%">@item.DisplayOrder</td>
                    <td width="20%">
                        <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-regular fa-eraser"></i>
                        </a>
                        <a class="btn btn-success" asp-controller="Category" asp-action="Show" asp-route-id="@item.Id">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


